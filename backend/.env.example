# FlowState Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5175

# Groq API (for AI analysis)
# Get your key: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# OpenAI API (optional alternative)
OPENAI_API_KEY=sk_your_openai_key_here

# Flowise (optional - for advanced RAG pipelines)
FLOWISE_API_URL=http://localhost:3000/api/v1/prediction/your-chatflow-id
FLOWISE_API_KEY=your_flowise_key_here

# Firebase Configuration
# Note: serviceAccount.json must be placed in backend/firebase/ directory
# Get it from: Firebase Console → Project Settings → Service Accounts → Generate New Private Key

# AI Configuration
AI_MODEL=llama-3.1-70b-versatile
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=500

# Rate Limiting (requests per minute)
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Security
ALLOWED_ORIGINS=http://localhost:5175,http://localhost:3000